<h1>Listando administradores</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">EMAIL</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
        <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td class="float-right">
                <%= link_to edit_admins_backoffice_admin_path(admin.id), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                <% end %>
                <button type="button" class="btn btn-danger btn-circle"><i class="fa fa-minus"></i></button>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
