<h1>Listando administradores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">EMAIL</th>
      <th scope="col">DESDE</th>
      <th scope="col">ÚLTIMA ATUALIZAÇÃO</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success btn-circle" do %>
            <i class="fa fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
        <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td><%= admin.created_at %></td>
            <td><%= admin.updated_at %></td>
            <td class="float-right">
                <%= link_to edit_admins_backoffice_admin_path(admin.id), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to admins_backoffice_admin_path(admin.id), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir?" } do %>
                    <i class="fa fa-minus"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admins %>
