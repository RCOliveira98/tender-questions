<h1>Listando assuntos/Ã¡reas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= t_attributes(@subjects, :id) %></th>
      <th scope="col"><%= t_attributes(@subjects, :description) %></th>
      <th scope="col"><%= t_attributes(@subjects, :created_at) %></th>
      <th scope="col"><%= t_attributes(@subjects, :updated_at) %></th>
      <th scope="col">
        <%= link_to new_admins_backoffice_subject_path	, class: "btn btn-success btn-block" do %>
            <i class="fa fa-plus"></i> Novo
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
        <tr>
            <td><%= subject.id %></td>
            <td><%= subject.description %></td>
            <td><%= subject.created_at %></td>
            <td><%= subject.updated_at %></td>
            <td class="float-right">
                <%= link_to edit_admins_backoffice_subject_path(subject.id), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to admins_backoffice_subject_path(subject.id), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir?" } do %>
                    <i class="fa fa-minus"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @subjects %>