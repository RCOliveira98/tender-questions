<h1>Listando perguntas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">PERGUNTA</th>
       <th scope="col">ASSUNTO</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_question_path, class: "btn btn-success btn-block" do %>
            <i class="fa fa-plus"></i> Novo
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
        <tr>
            <td><%= question.id %></td>
            <td><%= question.description.truncate(50) %></td>
            <td><%= question.subject.description.truncate(30) %></td>
            <td class="float-right">
                <%= link_to edit_admins_backoffice_question_path(question.id), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to admins_backoffice_question_path(question.id), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir?" } do %>
                    <i class="fa fa-minus"></i>
                <% end %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @questions %>